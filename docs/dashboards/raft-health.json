{
  "uid": "inferadb-raft-health",
  "title": "InferaDB Ledger — Raft Consensus Health",
  "description": "Election count, leader changes, proposal latency, log replication lag, and quorum status.",
  "editable": true,
  "graphTooltip": 1,
  "schemaVersion": 39,
  "tags": ["inferadb", "raft", "consensus", "health"],
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "10s",
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0
      },
      {
        "name": "node_id",
        "type": "query",
        "datasource": { "uid": "${datasource}" },
        "query": "label_values(inferadb_ledger_raft_is_leader, node_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" },
        "refresh": 2,
        "sort": 1
      },
      {
        "name": "shard_id",
        "type": "query",
        "datasource": { "uid": "${datasource}" },
        "query": "label_values(inferadb_ledger_raft_term, shard_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": "$__all" },
        "refresh": 2,
        "sort": 1
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Leader Elections",
        "datasource": { "uid": "${datasource}" },
        "enable": true,
        "expr": "increase(ledger_leader_elections_total[1m]) > 0",
        "tagKeys": "event",
        "textFormat": "Leader election occurred",
        "iconColor": "orange"
      },
      {
        "name": "Quorum Loss",
        "datasource": { "uid": "${datasource}" },
        "enable": true,
        "expr": "ledger_cluster_quorum_status == 0",
        "tagKeys": "severity",
        "textFormat": "Quorum lost",
        "iconColor": "red"
      }
    ]
  },
  "panels": [
    {
      "title": "Quorum Status",
      "description": "1 = quorum, 0 = no quorum. Alert: any drop to 0.",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "NO QUORUM", "color": "red" }, "1": { "text": "QUORUM OK", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "ledger_cluster_quorum_status",
          "legendFormat": "Quorum"
        }
      ]
    },
    {
      "title": "Current Leader",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Follower", "color": "blue" }, "1": { "text": "LEADER", "color": "green" } } }
          ]
        }
      },
      "targets": [
        {
          "expr": "inferadb_ledger_raft_is_leader",
          "legendFormat": "Node {{instance}}"
        }
      ]
    },
    {
      "title": "Current Term",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "targets": [
        {
          "expr": "inferadb_ledger_raft_term",
          "legendFormat": "Term"
        }
      ]
    },
    {
      "title": "Commit Index",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "short" }
      },
      "targets": [
        {
          "expr": "inferadb_ledger_raft_commit_index",
          "legendFormat": "Commit Index"
        }
      ]
    },
    {
      "title": "Leader Elections",
      "description": "Alert: > 3 elections in 5 minutes indicates instability.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "bars", "fillOpacity": 80, "lineWidth": 1 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 3 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "increase(ledger_leader_elections_total[$__rate_interval])",
          "legendFormat": "Elections"
        }
      ]
    },
    {
      "title": "Raft Term Over Time",
      "description": "Monotonically increasing. Rapid increases indicate frequent elections.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "fillOpacity": 0, "lineWidth": 2 }
        }
      },
      "targets": [
        {
          "expr": "inferadb_ledger_raft_term",
          "legendFormat": "Term {{instance}}"
        }
      ]
    },
    {
      "title": "Raft Apply Latency — p50 / p95 / p99",
      "description": "SLO targets: p50 < 1ms, p95 < 5ms, p99 < 25ms",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 0, "lineWidth": 2 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.005 },
              { "color": "red", "value": 0.025 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(inferadb_ledger_raft_apply_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(inferadb_ledger_raft_apply_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(inferadb_ledger_raft_apply_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "title": "Proposal Rate & Timeouts",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        }
      },
      "targets": [
        {
          "expr": "rate(inferadb_ledger_raft_proposals_total[$__rate_interval])",
          "legendFormat": "Proposals/s"
        },
        {
          "expr": "rate(inferadb_ledger_raft_proposal_timeouts_total[$__rate_interval])",
          "legendFormat": "Timeouts/s"
        }
      ]
    },
    {
      "title": "Pending Proposals",
      "description": "Alert: > 100 warning, > 500 critical.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "inferadb_ledger_raft_proposals_pending",
          "legendFormat": "Pending {{instance}}"
        }
      ]
    },
    {
      "title": "Snapshot Operations",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 0, "lineWidth": 2 }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(ledger_snapshot_create_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "Snapshot Create p99"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(ledger_snapshot_restore_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "Snapshot Restore p99"
        }
      ]
    },
    {
      "title": "Vault Health",
      "description": "0 = healthy, 1 = diverged, 2 = recovering",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "filterable": true }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "0": { "text": "Healthy", "color": "green" }, "1": { "text": "Diverged", "color": "red" }, "2": { "text": "Recovering", "color": "orange" } } }
                ]
              }
            ]
          }
        ]
      },
      "targets": [
        {
          "expr": "ledger_vault_health",
          "legendFormat": "ns:{{organization_slug}} vault:{{vault_id}}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "state": true },
            "renameByName": { "organization_slug": "Organization", "vault_id": "Vault", "Value": "Status" }
          }
        }
      ]
    },
    {
      "title": "Recovery Attempts",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "bars", "fillOpacity": 80, "lineWidth": 1, "stacking": { "mode": "normal" } }
        }
      },
      "targets": [
        {
          "expr": "sum by (outcome) (increase(ledger_divergence_recovery_attempts_total[$__rate_interval]))",
          "legendFormat": "{{outcome}}"
        }
      ]
    },
    {
      "title": "Idempotency Cache",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        }
      },
      "targets": [
        {
          "expr": "ledger_idempotency_cache_size",
          "legendFormat": "Cache Size"
        },
        {
          "expr": "rate(ledger_idempotency_cache_hits_total[$__rate_interval])",
          "legendFormat": "Hits/s"
        },
        {
          "expr": "rate(ledger_idempotency_cache_misses_total[$__rate_interval])",
          "legendFormat": "Misses/s"
        }
      ]
    },
    {
      "title": "State Root Computation Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 36 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 0, "lineWidth": 2 }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(inferadb_ledger_state_root_latency_seconds_bucket[$__rate_interval])))",
          "legendFormat": "State Root p99"
        }
      ]
    }
  ],
  "links": [
    {
      "title": "SLO Reference",
      "url": "https://github.com/inferadb/ledger/blob/main/docs/operations/slo.md",
      "type": "link",
      "icon": "doc",
      "tooltip": "SLI/SLO thresholds and alert definitions"
    }
  ]
}
